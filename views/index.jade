extends layout

block content
	h1.text-center.login-title Sign in to continue
	div
		form(action='/login', method='POST')
			input.form-control( type='text',     name='username', placeholder='Username', required, autofocus )
			input.form-control( type='password', name='password', placeholder='Password', required            )
			button.btn.btn-lg.btn-primary.btn-block( type='submit') Sign in
			span.clearfix
	a(href='/signup') Create an account
	#message
	if message
		h1.text-center.error-message #{message}